@model System.Collections.Generic.IEnumerable<DealershipModel.Entities.Vehicle>

@{
   ViewBag.Title = "title";
}
<table>
   <thead>
      <tr>
         <th>Stock Number</th>
         <th colspan="3" class="model">Vehicle</th>
         <th>Dealership</th>
         <th>Directions</th>

      </tr>

   <tr>
      <th></th>
      <th>Year</th>
      <th>Make</th>
      <th class="model">Model</th>
      <th></th>
      <th></th>
   </tr>
   </thead>
   @foreach (var vehicle in Model)
   {
      <tr>
         <td>@Html.ActionLink(@vehicle.Id.ToString("D5"),"Vehicle", new {id= vehicle.Id} )</td>
         <td>@vehicle.Year</td>
         <td>@vehicle.Make</td>
         <td class="model">@vehicle.Model</td>
         @if (vehicle.Dealership != null)
         {
            <td>Dealer #@vehicle.Dealership.Id.ToString("D5") (@vehicle.Dealership.Address.City, @vehicle.Dealership.Address.State)</td>
            <td><a href="https://www.google.com/maps?daddr=@vehicle.Dealership.Address.FullAddress" target="_new">Directions To Dealer #:@vehicle.Dealership.Id.ToString("D5")</a></td>
         }
         else
         {
            <td class="alert-danger" colspan="2">Sold</td>
         }
      </tr>
   }

</table>

@section sideNav{
   <h2>Featured Partners</h2>
   <a href="http://ford.com" target="_blank">
   <img src="https://manuals4u.com.au/wp-content/uploads/2011/11/ford-banner.jpg" alt="Advert" style="width: 100%" />
   <img src="http://int.www.northpoint.com.au/images/ford-banner.png" alt="Advert" style="width: 100%" />
   <img src="http://holmanford.com/img/Ford_Banner_060313.jpg" alt="Advert" style="width: 100%" />
</a>
}

@section js{
   <script>
      $("car").addClass("active");
   </script>
}